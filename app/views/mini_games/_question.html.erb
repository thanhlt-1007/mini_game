<div class="modal fade js-modal-question-<%= question_index %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
          Ô chữ số <%= question_index + 1 %>
        </h4>
      </div>
      <div class="modal-body">
        <div>
          <p><%= question %></p>
        </div>
        <div>
          <% answer_chars = answer_chars(answer).join("") %>
          <input type="text" data-answer="<%= answer_chars(answer).join("") %>" data-index="<%= question_index %>"
            class="form-control js-input-answer" placeholder="Nhập câu trả lời và Enter để kiểm tra">
        </div>
        <div>
          <span class="text-danger js-text-danger"></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary pull-left"
          data-dismiss="modal">
          Đóng
        </button>
        <button type="button" class="btn btn-success pull-right js-btn-display-answer"
          data-dismiss="modal" data-index="<%= question_index %>">
          Hiển thị ô chữ
        </button>
      </div>
    </div>
  </div>
</div>
