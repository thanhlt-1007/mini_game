<div class="modal fade js-modal-question-<%= question_index %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
          Ô chữ số <%= question_index + 1 %>
        </h4>
      </div>
      <div class="modal-body">
        <p><%= question %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary pull-left"
          data-dismiss="modal">
          Đóng
        </button>
        <button type="button" class="btn btn-success pull-right js-btn-display-answer"
          data-dismiss="modal" data-index="<%= question_index %>">
          Hiển thị ô chữ
        </button>
      </div>
    </div>
  </div>
</div>
